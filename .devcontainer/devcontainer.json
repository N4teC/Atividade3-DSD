{
    "name": "Jogo da Velha gRPC",
    "image": "mcr.microsoft.com/devcontainers/universal:2-linux",
    "features": {
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.11"
        },
        "ghcr.io/devcontainers/features/ruby:1": {
            "version": "3.1"
        }
    },
    "postCreateCommand": "pip install -r requirements.txt && bundle install",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "rebornix.ruby"
            ]
        }
    }
}
